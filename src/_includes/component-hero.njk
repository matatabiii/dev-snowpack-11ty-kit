{%- set h1Hero = 'h1' if page.type !== 'single' else 'div' -%}
<div id="hero" class="l-hero" data-component="hero" data-view-over="header">
  {%- if hero.parent -%}
    <div id="hero-parent" class="l-hero__parent">hero.parent</div>
  {%- endif -%}

  {%- if hero.main -%}
    <{{ h1Hero }} id="hero-main" class="l-hero__main">
      {{ hero.main }}（{{ h1Hero }}）
    </{{ h1Hero }}>
  {%- endif -%}

  {%- if hero.sub -%}
    <div id="hero-sub" class="l-hero__sub">hero.sub</div>
  {%- endif -%}

  {%- if hero.bgImageName -%}
  <div id="hero-page-bgImage" class="l-hero__bg">
    <img src="{{ hero.bgImageName }}.jpg"
      srcset="{{ hero.bgImageName }}.jpg 700w, {{ hero.bgImageName }}@2x.jpg 1400w"
      sizes="(min-width: 376px) 700px, 400px"
      decoding="async" loading="lazy"
      width="700" height="200" class="l-hero__bg__main" alt="">
  </div>
  {%- endif -%}
</div>
